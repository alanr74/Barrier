<Window xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:Ava.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    x:Class="Ava.SettingsWindow"
    x:DataType="vm:SettingsViewModel"
    Title="Settings"
    Width="600" Height="400">

    <ListBox ItemsSource="{Binding Settings}" Margin="10">
        <ListBox.ItemTemplate>
            <DataTemplate DataType="vm:SettingItem">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding Name}" Width="250" FontWeight="Bold" />
                    <TextBlock Text=": " />
                    <TextBlock Text="{Binding Value}" Width="300" Foreground="{Binding Color}" />
                </StackPanel>
            </DataTemplate>
        </ListBox.ItemTemplate>
    </ListBox>
</Window>